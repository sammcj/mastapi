{
  "name": "mastapi",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p ./",
    "start": "node ./dist/index.js",
    "lint": "eslint --ext .js,.ts src",
    "doc": "typedoc --out ../docs ./src",
    "test": "NODE_ENV=test jest -u --maxWorkers=3",
    "build:ncc": "ncc build ./src/index.ts -o ./dist",
    "build:esbuild": "esbuild --bundle --minify --sourcemap --target=es2019 --platform=node --format=cjs --outdir=dist src/index.ts"
  },
  "engines": {
    "node": ">=v16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sammcj/mastapi.git"
  },
  "keywords": [
    "mastodon",
    "client",
    "api",
    "streaming",
    "rest",
    "proxy"
  ],
  "author": "sammcj",
  "license": "MIT",
  "dependencies": {
    "megalodon": "^4.1.1",
    "readline": "^1.3.0",
    "typescript": "^4.9.3",
    "uuid": "^9.0.0",
    "yaml": "^2.1.3"
  },
  "devDependencies": {
    "@types/core-js": "^2.5.5",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "jest-worker": "^29.3.1",
    "lodash": "^4.17.21",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.23.21",
    "typescript": "4.9.3",
    "esbuild": "^0.15.15"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
